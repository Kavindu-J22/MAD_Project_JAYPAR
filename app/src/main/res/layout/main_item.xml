<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="13dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/light_blue">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/bikeNoTextView"
                android:text="@string/addServiceCarNumber"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:id="@+id/bikeNoText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/bookingIdTextView"
                android:text="@string/addServiceBookingId"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:id="@+id/bookingIdText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateTextView"
                android:text="@string/addServiceDate"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:id="@+id/dateText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/problemTextView"
                android:text="@string/addServiceProblem"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:id="@+id/problemText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/totalCostTextView"
                android:text="@string/totalCostTextView"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:id="@+id/totalCostText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textAllCaps="false"
                android:background="@drawable/btn_sample2"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="17sp"
                android:id="@+id/okBtn"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textAllCaps="false"
                android:background="@drawable/btn_sample2"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="17sp"
                android:id="@+id/cancelBtn"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>